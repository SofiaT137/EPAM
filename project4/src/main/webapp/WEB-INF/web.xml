<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tld/hello_tag.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/hello_tag.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/WEB-INF/tld/error_tag.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/error_tag.tld</taglib-location>
        </taglib>
    </jsp-config>
        <listener>
            <listener-class>com.epam.jwd.controller.listener.SessionListener</listener-class>
        </listener>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>
            com.epam.jwd.controller.filter.EncodingFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
   </web-app>